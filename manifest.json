{
    "manifest_version": 2,
    "name": "Multiple Forwarding",
    "description": "Forward multiple emails at once",
    "version": "1.0.0",
    "author": "Vin√≠cius Costa",
    "browser_specific_settings": {
        "gecko": {
            "id": "{e5624468-77f1-4fdd-8c4c-0a061b54794f}",
            "strict_min_version": "102.0.0"
        }
    },
    "icons": {
        "64": "images/circle-icons-mail-64px.png",
        "32": "images/circle-icons-mail-32px.png"
    },
    "permissions": [
        "messagesRead",

        "compose",
        "compose.send",

        "accountsRead",
        
        "activeTab",
        "tabs",
        "tabHide",

        "storage"
    ],
    "browser_action": {
        "default_title": "MF",
        "default_icon": "images/circle-icons-mail-32px.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "page": "background.html"
    }

}